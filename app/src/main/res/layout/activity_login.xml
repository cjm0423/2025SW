<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 1) 상단 컨테이너: 화면 높이의 50% -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F3F0FB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비상구"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2) 첫 번째 카카오 버튼: topContainer 바로 아래 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKakaoLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:backgroundTint="#FEE500"
        android:icon="@drawable/ic_kakao_chat"
        android:iconGravity="textStart"
        android:iconPadding="8dp"
        android:text="카카오 로그인"
        android:textColor="#000000"
        app:cornerRadius="8dp"/>

    <!-- 3) 두 번째 카카오 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKakaoStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnKakaoLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:backgroundTint="#FEE500"
        android:icon="@drawable/ic_kakao_chat"
        android:iconGravity="textStart"
        android:iconPadding="8dp"
        android:text="카카오로 시작하기"
        android:textColor="#000000"
        app:cornerRadius="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <!-- 이미지 (배너) -->
                <ImageView
                    android:id="@+id/bannerImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="H,16:9"/>

                <!-- 좌측 아이콘 -->
                <ImageButton
                    android:id="@+id/btn_profile"
                    style="@style/NoBackground_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ai"
                    app:layout_constraintTop_toTopOf="@+id/bannerImage"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>

                <!-- 우측 알림 아이콘 -->
                <ImageButton
                    android:id="@+id/btn_notification"
                    style="@style/NoBackground_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_policy"
                    app:layout_constraintTop_toTopOf="@+id/bannerImage"
                    app:layout_constraintEnd_toStartOf="@+id/btn_settings"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <!-- 우측 설정 아이콘 -->
                <ImageButton
                    android:id="@+id/btn_settings"
                    style="@style/NoBackground_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    app:layout_constraintTop_toTopOf="@+id/bannerImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"/>

                <!-- 비상구 텍스트 -->
                <TextView
                    android:id="@+id/todayDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비상구"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!-- 추천 상품 섹션 -->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                    <TextView
                        android:id="@+id/RecommendSavingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천 상품"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!-- 내부 콘텐츠: 하나의 뷰만 감싸야 합니다 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 여기에 추천 카드나 텍스트뷰 등 아이템 추가 -->

                    </LinearLayout>

                </HorizontalScrollView>

                </LinearLayout>

                <!-- 인기 상품 섹션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="인기 상품"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- 내부 콘텐츠: 하나의 뷰만 감싸야 합니다 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <!-- 여기에 추천 카드나 텍스트뷰 등 아이템 추가 -->

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <!-- 지역별 지원 정책 섹션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="지역별 지원 정책"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- 여기에 추천 카드나 텍스트뷰 등 아이템 추가 -->

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>

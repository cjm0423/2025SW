<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:theme="@style/Theme.MaterialComponents.DayNight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- 1) 타이틀 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비상구"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="start"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

        <!-- 2-1) 닉네임 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxWidth="360dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2-2) 생년월일 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxWidth="360dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="생년월일"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2-3) 주거지 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxWidth="360dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주거지"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2-4) 소득 분위 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxWidth="360dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="소득 분위"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2-5) 관심 키워드 (ExposedDropdownMenu) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxWidth="360dp"
            android:hint="관심 키워드"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="2dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actvKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                tools:ignore="SpeakableTextPresent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 3) 체크박스들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:maxWidth="360dp"
            android:minHeight="48dp">

            <CheckBox
                android:id="@+id/cbAgreeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/tvAgreeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 정보 수집에 동의하십니까"
                android:layout_marginStart="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:maxWidth="360dp"
            android:minHeight="48dp">

            <CheckBox
                android:id="@+id/cbAgreeNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/tvAgreeNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림에 동의하십니까"
                android:layout_marginStart="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 4) 가입 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:maxWidth="360dp"
            android:backgroundTint="#FEE500"
            android:iconGravity="textStart"
            android:iconPadding="8dp"
            android:text="회원 가입"
            android:textColor="#000"
            app:cornerRadius="8dp"/>

        <!-- 여백 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>
</ScrollView>
